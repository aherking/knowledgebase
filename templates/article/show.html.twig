{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ article.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ article.date ? article.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Changed</th>
                <td>{{ article.changed ? article.changed|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ article.userid }}</td>
            </tr>
            <tr>
                <th>Workflow</th>
                <td>{{ article.workflow }}</td>
            </tr>
            <tr>
                <th>Errormessage</th>
                <td>{{ article.errormessage }}</td>
            </tr>
            <tr>
                <th>Solution</th>
                <td>{{ article.solution }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('article_index') }}">back to list</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
